<h1>Listing settings</h1>

<table>
  <thead>
    <tr>
      <th>Update emails</th>
      <th>Digest emails</th>
      <th>Promotional emails</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @settings.each do |setting| %>
      <tr>
        <td><%= setting.update_emails %></td>
        <td><%= setting.digest_emails %></td>
        <td><%= setting.promotional_emails %></td>
        <td><%= setting.user %></td>
        <td><%= link_to 'Show', setting %></td>
        <td><%= link_to 'Edit', edit_setting_path(setting) %></td>
        <td><%= link_to 'Destroy', setting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

