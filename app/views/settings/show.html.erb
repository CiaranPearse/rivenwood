<%- model_class = Setting -%>
<div class="page-header">
  <h1><%=t '.title', :default => Setting %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:update_emails) %></dt>
      <dd><pre class="prettyprint"><%= @setting.update_emails %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:digest_emails) %></dt>
      <dd><pre class="prettyprint"><%= @setting.digest_emails %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:promotional_emails) %></dt>
      <dd><pre class="prettyprint"><%= @setting.promotional_emails %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              settings_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_setting_path(@setting), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              setting_path(@setting),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

